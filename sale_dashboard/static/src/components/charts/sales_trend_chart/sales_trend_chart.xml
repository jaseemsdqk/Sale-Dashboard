<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="sale_dashboard.SalesTrendChart">
        <div class="card chart-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Sales Trend (Last 7 Days)</h5>
                <t t-if="props.isEditMode">
                    <button class="btn btn-sm btn-outline-danger" t-on-click="removeChart">
                        <i class="fa fa-trash"></i>
                    </button>
                </t>
            </div>
            <div class="card-body">
                <div class="chart-container" style="height: 400px;">
                    <canvas t-ref="salesTrendChart"></canvas>
                </div>
            </div>
        </div>
    </t>
</templates>
